<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/fragment_list1">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
   >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="חיפוש טרמפ"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textStyle="bold"

        android:layout_gravity="center_horizontal"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"

        android:background="@drawable/button_ipq"
        android:text="הגדר תאריך"
        android:id="@+id/btnDate"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/submit"
        android:layout_alignStart="@+id/submit" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="33dp"
        android:weightSum="2"
        android:id="@+id/rdGrpCollageHome"

        android:checked="false"


        android:layout_below="@+id/btnDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="נסיעה למכללה"
            android:id="@+id/collage"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="20dp"

            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/btnHome"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.13" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="נסיעה הביתה  "
            android:gravity="center"
            android:id="@+id/home"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="20dp"
            android:layout_weight="0.13"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/btnHome"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="נסיעה לעבודה"
            android:gravity="center"
            android:id="@+id/work"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="20dp"
            android:layout_weight="0.13"
            android:textColor="#ffffffff"
            android:textStyle="bold"></RadioButton>

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"

        android:background="@drawable/button_ipq"
        android:text="הגדר יעד"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/btnHome"
        android:visibility="invisible"
        android:layout_below="@+id/rdGrpCollageHome"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"

        android:gravity="center|start"
        android:background="@drawable/button_ipq"
        android:text="חפש לי טרמפ"
        android:textSize="20dp"

        android:id="@+id/submit"
        android:textStyle="bold"

        android:layout_marginTop="5dp"
        android:layout_below="@+id/btnHome"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"

        android:background="@drawable/button_ipq"
        android:text="חזור"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="bottom|center"
        android:id="@+id/back"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/submit"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finddriver"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp" />
</RelativeLayout>
</FrameLayout>

