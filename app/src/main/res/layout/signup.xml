<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@color/windowBackground">


<RelativeLayout


    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_container">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הרשמה לIPQ"
        android:id="@+id/ipqtext"
        android:textColor="@color/textColorPrimary"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" הכנס תעודת זהות "
        android:ems="14"
        android:drawableLeft="@drawable/id"
        android:id="@+id/ID"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="@drawable/grey"
        android:inputType="number"
        android:layout_below="@+id/ipqtext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:drawableLeft="@drawable/name"
        android:hint="הכנס שם פרטי"
        android:id="@+id/Fn"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:background="@drawable/grey"
        android:inputType="text"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/ID"
        android:layout_alignLeft="@+id/ID"
        android:layout_alignStart="@+id/ID"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="הכנס שם משפחה"
        android:id="@+id/Ln"
        android:ems="14"
        android:drawableLeft="@drawable/name"

        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:background="@drawable/grey"
        android:inputType="text"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"

        android:layout_below="@+id/Fn"
        android:layout_alignLeft="@+id/Fn"
        android:layout_alignStart="@+id/Fn"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="הכנס טלפון נייד"
        android:textSize="15dp"
        android:ems="14"
        android:drawableLeft="@drawable/phone"
        android:id="@+id/Phone"
        android:textColor="#000000"

        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/grey"
        android:inputType="phone"
        android:imeOptions="actionDone"

        android:layout_below="@+id/Ln"
        android:layout_alignLeft="@+id/Ln"
        android:layout_alignStart="@+id/Ln"
        android:layout_marginTop="8dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="הכנס אימייל "
        android:id="@+id/Email"
        android:drawableLeft="@drawable/emailic"
        android:ems="14"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"

        android:background="@drawable/grey"
        android:inputType="textWebEmailAddress"
        android:layout_below="@+id/Phone"
        android:layout_alignLeft="@+id/Phone"
        android:layout_alignStart="@+id/Phone"
        android:layout_marginTop="8dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:drawableLeft="@drawable/keyic"
        android:hint="הכנס סיסמא"
        android:id="@+id/Pass"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:background="@drawable/grey"
        android:inputType="textPassword"
        android:layout_below="@+id/Email"
        android:layout_alignLeft="@+id/Email"
        android:layout_alignStart="@+id/Email"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="הכנס כתובת מגורים"
        android:id="@+id/addrss"
        android:ems="14"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:drawableLeft="@drawable/home"
        android:textSize="15dp"
        android:background="@drawable/grey"
        android:inputType="textPostalAddress"

        android:layout_below="@+id/Pass"
        android:layout_alignLeft="@+id/Pass"
        android:layout_alignStart="@+id/Pass"
        android:layout_marginTop="8dp" />
    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grey"
        android:id="@+id/auto_complete"
        android:hint="הכנס עיר מגורים"
        android:drawableLeft="@drawable/city"

        android:textSize="15dp"
        android:ems="14"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/addrss"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_ipq"
        android:id="@+id/submit"
        android:text="הירשם"
        android:drawableLeft="@drawable/signup"

        android:textColor="@color/textColorPrimary"
        android:textSize="25dp"
        android:ems="8"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/auto_complete"
        android:layout_centerHorizontal="true" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signupsaving"
        android:layout_below="@+id/submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />



</RelativeLayout>

  </ScrollView>