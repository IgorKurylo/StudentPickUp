<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/windowBackground"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="התחברות"
        android:textColor="@color/textColorPrimary"
        android:textSize="35sp"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="15dp"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="center">
    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textEmailAddress"
    android:hint="הכנס אימייל"
        android:drawableLeft="@drawable/emailic"
    android:ems="15"
    android:id="@+id/email"
        android:gravity="center"
        android:textSize="15dp"
    android:layout_gravity="center_horizontal"
        android:background="@drawable/grey"
        android:textColor="#000000"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:autoText="false"
        android:textStyle="bold"
        android:visibility="visible"
        android:editable="false" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signin"
            android:gravity="center"
            android:textSize="20dp"
            android:text="התחבר"
            android:drawablePadding="0dp"
            android:drawableLeft="@drawable/login"
            android:ems="10"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:background="@drawable/button_ipq"
            android:layout_marginBottom="7dp"
            android:layout_gravity="center_horizontal|bottom" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="15"
            android:drawableLeft="@drawable/keyic"
            android:id="@+id/pass"
            android:hint="הכנס סיסמה"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:background="@drawable/grey"
            android:textColor="#000000"
            android:password="true"
            android:singleLine="true"
            android:visibility="visible"
            android:textStyle="bold" />



    </FrameLayout>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driver"
        android:textSize="20sp"
        android:drawableRight="@drawable/login_check"
        android:button="@null"
        android:text="האם אתה נהג היום?"
        android:textColor="@color/textColorPrimary"
        android:layout_gravity="center"
        android:layout_marginTop="0dp" />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</LinearLayout>