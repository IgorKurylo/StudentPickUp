<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container"

    android:background="@drawable/backgrnd"
    >

    <ImageView
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:id="@+id/signupimg"
        android:src="@drawable/signupimg"/>



        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint=" Enter ID Number"
            android:id="@+id/ID"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:background="@drawable/grey"
            android:inputType="number"
            android:layout_below="@+id/signupimg"
            android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Enter First Name"
        android:id="@+id/Fn"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/grey"
        android:inputType="text"
        android:layout_below="@+id/ID"
        android:layout_alignLeft="@+id/ID"
        android:layout_alignStart="@+id/ID" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Enter Last Name"
        android:id="@+id/Ln"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:background="@drawable/grey"
        android:inputType="text"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/Fn"
        android:layout_alignLeft="@+id/Fn"
        android:layout_alignStart="@+id/Fn" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Enter Email "
        android:id="@+id/Email"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:background="@drawable/grey"
        android:inputType="textWebEmailAddress"
        android:layout_below="@+id/Ln"
        android:layout_alignLeft="@+id/Ln"
        android:layout_alignStart="@+id/Ln"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Enter Password"
        android:id="@+id/Pass"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:background="@drawable/grey"
        android:inputType="textPassword"
        android:layout_below="@+id/Email"
        android:layout_alignLeft="@+id/Email"
        android:layout_alignStart="@+id/Email"
        android:layout_marginTop="15dp" />




    <ImageButton
        android:layout_width="190dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/submit"
        android:id="@+id/submit"

        android:layout_below="@+id/Pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />




</RelativeLayout>

